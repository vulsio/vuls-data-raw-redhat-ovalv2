	"metadata": {
		"title": "kernel: ptp: Fix possible memory leak in ptp_clock_register() (low)",
		"reference": [
			{
				"ref_id": "CVE-2021-47455",
				"ref_url": "https://access.redhat.com/security/cve/CVE-2021-47455",
