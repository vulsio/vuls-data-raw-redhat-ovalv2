		"title": "RHSA-2014:1118: glibc security update (Important)",
		"reference": [
			{
				"ref_id": "RHSA-2014:1118",
				"ref_url": "https://access.redhat.com/errata/RHSA-2014:1118",
				"source": "RHSA"
