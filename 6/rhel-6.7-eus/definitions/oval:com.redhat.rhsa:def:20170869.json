  "metadata": {
    "title": "RHSA-2017:0869: kernel security and enhancement update (Moderate)",
    "reference": [
      {
        "ref_id": "RHSA-2017:0869",
        "ref_url": "https://access.redhat.com/errata/RHSA-2017:0869",
        "source": "RHSA"
