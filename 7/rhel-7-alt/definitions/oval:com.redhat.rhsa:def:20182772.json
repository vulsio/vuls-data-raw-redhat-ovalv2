  "metadata": {
    "title": "RHSA-2018:2772: kernel-alt security and bug fix update (Important)",
    "reference": [
      {
        "ref_id": "RHSA-2018:2772",
        "ref_url": "https://access.redhat.com/errata/RHSA-2018:2772",
