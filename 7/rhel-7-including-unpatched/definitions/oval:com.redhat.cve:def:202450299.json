	"metadata": {
		"title": "kernel: sctp: properly validate chunk size in sctp_sf_ootb() (moderate)",
		"reference": [
			{
				"ref_id": "CVE-2024-50299",
				"ref_url": "https://access.redhat.com/security/cve/CVE-2024-50299",
