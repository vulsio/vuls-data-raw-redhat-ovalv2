	"metadata": {
		"title": "kernel: Bluetooth: MGMT: Fix possible deadlocks (moderate)",
		"reference": [
			{
				"ref_id": "CVE-2024-53207",
				"ref_url": "https://access.redhat.com/security/cve/CVE-2024-53207",
