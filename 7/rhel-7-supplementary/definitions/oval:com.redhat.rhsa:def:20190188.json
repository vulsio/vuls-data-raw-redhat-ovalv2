  "metadata": {
    "title": "RHSA-2019:0188: kernel-rt security and bug fix update (Important)",
    "reference": [
      {
        "ref_id": "RHSA-2019:0188",
        "ref_url": "https://access.redhat.com/errata/RHSA-2019:0188",
        "source": "RHSA"
