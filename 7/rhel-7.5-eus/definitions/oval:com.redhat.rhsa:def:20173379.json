  "metadata": {
    "title": "RHSA-2017:3379: sssd security and bug fix update (Moderate)",
    "reference": [
      {
        "ref_id": "RHSA-2017:3379",
        "ref_url": "https://access.redhat.com/errata/RHSA-2017:3379",
        "source": "RHSA"
