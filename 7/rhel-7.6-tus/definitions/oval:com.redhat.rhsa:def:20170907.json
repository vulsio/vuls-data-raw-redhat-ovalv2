  "metadata": {
    "title": "RHSA-2017:0907: util-linux security and bug fix update (Moderate)",
    "reference": [
      {
        "ref_id": "RHSA-2017:0907",
        "ref_url": "https://access.redhat.com/errata/RHSA-2017:0907",
        "source": "RHSA"
